---
import Editor from '@components/Editor.astro';
import { createImportMapJson } from '@services/importmap.mjs';

const importmap = createImportMapJson(['dialog']);

const code = `
<dialog dialog="hello-world">
	Hello World!<br><br>
	<button dialog-close="hello-world">Close</button>
</dialog>

<button dialog-open="hello-world">Open Dialog</button>

<script type="importmap">${importmap}</script>

<script type="module">
	import Signalize from 'signalizejs';
	const { resolve } = new Signalize();

	await resolve('dialog');
</script>
`.trim();
---

<Editor code={code} />
